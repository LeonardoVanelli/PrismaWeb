@model PrismaWEB.Models.CARGOS

@{
    ViewBag.Title = "Details";
}

<div class="form-row">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group col-md-12">
        <div class="col-md-offset-2">
            <a href="@Url.Action("Create")" class="btn btn-success">Novo</a>
            <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-info">Editar</a>
            <a href="@Url.Action("Delete", new { id = Model.Id })" class="btn btn-danger">Deletar</a>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
        </div>
    </div>   
    
    <div class="form-group col-md-3">
        @Html.LabelFor(model => model.Nome, "Nome")
        <div class="ui-widget">
            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>   

    <div class="form-group col-md-9">
        @Html.LabelFor(model => model.Descricao, "Descrição")
        <div class="ui-widget">
            @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>   

    <div class="form-group col-md-3">
        @Html.LabelFor(model => model.DataCraicao, "Data de Craição")
        <div class="ui-widget">
            @Html.EditorFor(model => model.DataCraicao, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>   
    <div class="form-group col-md-3"> 
        @Html.LabelFor(model => model.DataAlteracao, "Data de Alteração")
        <div class="ui-widget">
            @Html.EditorFor(model => model.DataAlteracao, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>   
</div>
<script src="~/Content/js/helper/DisableCampos.js"></script>

